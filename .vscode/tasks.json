{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build MPI",
            "type": "shell",                            
            "command": "mpicxx",                         // MPI-Wrapper als Compiler
            "args": [
                "-std=c++17",                            
                "-O2",                                   
                "${file}",                               
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"                  
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run MPI",
            "type": "shell",
            "command": "mpirun",
            "args": [
                "-np", "4",                              
                "${workspaceFolder}/encryptor"          
            ],
            "dependsOn": "build MPI",
            "group": "test"
        }
    ]
}
